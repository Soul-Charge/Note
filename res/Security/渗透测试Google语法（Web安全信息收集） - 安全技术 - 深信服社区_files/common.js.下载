function compareObject (former, latter) {
	if (former instanceof Object && latter instanceof Object) {
		if (Object.keys(former).length !== Object.keys(latter).length) {
			return false;
		} else{
			for (var key in former) {
				if (!(key in latter)) {
					return false;
				}
				if (former[key] instanceof Array && latter[key] instanceof Array) {
					if (!compareArray(former[key], latter[key])) {
						return false;
					}
				} else if (former[key] instanceof Object && latter[key] instanceof Object) {
					if (!compareObject(former[key], latter[key])) {
						return false;
					}
				} else if (former[key] !== latter[key]) {
					return false;
				}
			}
		}
	} else{
		return former === latter;
	}
	return true;
}

function showTopLink() {
	var ft = $('ft');
	if(ft){
		var scrolltop = $('scrolltop');
		var viewPortHeight = parseInt(document.documentElement.clientHeight);
		var scrollHeight = parseInt(document.body.getBoundingClientRect().top);
		var contWidth = document.querySelector(".container").offsetWidth
		var basew = parseInt(ft.clientWidth);
		var sw = scrolltop.clientWidth;
		var sh = 234;
		var scrolltopa = $('scrolltopa');		
		if (document.body.clientWidth > 1300) {
			var left = parseInt(fetchOffset(ft)['left']);
			left = left < sw ? left * 2 - sw : left;
			scrolltop.style.left = 'calc(50% + ' + parseInt(contWidth/2) + 'px)';
		} else {
			scrolltop.style.left = 'auto';
			scrolltop.style.right = 0;
		}

		if (BROWSER.ie && BROWSER.ie < 7) {
			scrolltop.style.top = viewPortHeight - scrollHeight - 150 + 'px';
		}
		if (scrollHeight < -100) {
			scrolltopa.style.visibility = 'visible';
		} else {
			scrolltopa.style.visibility = 'hidden';
		}
		if(jQuery('.online-consult')&&jQuery('.online-consult').offset()){
			var hasonlinetop = 452+jQuery('.online-consult').offset().top;

			if(viewPortHeight-scrollHeight-sh-hasonlinetop-160<0&&scrolltop.style.position!='absolute'){
				scrolltop.style.position = 'absolute';
				scrolltop.style.top = hasonlinetop+'px';
			}else if(viewPortHeight-scrollHeight-sh-hasonlinetop-160>0&&scrolltop.style.position!='fixed'){
				scrolltop.style.position = 'fixed';
				scrolltop.style.top = 'auto';
			}
		}
	}
}

