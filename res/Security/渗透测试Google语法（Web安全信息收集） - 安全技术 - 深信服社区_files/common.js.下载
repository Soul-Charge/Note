DISCUZCODE['html'] = [];

var USERABOUT_BOX = true;
var USERCARDST = null;
var CLIPBOARDSWFDATA = '';
var NOTICETITLE = [];
var NOTICECURTITLE = document.title;
var safescripts = {}, evalscripts = [];

if(BROWSER.firefox && window.HTMLElement) {
	HTMLElement.prototype.__defineGetter__( "innerText", function(){
		var anyString = "";
		var childS = this.childNodes;
		for(var i=0; i <childS.length; i++) {
			if(childS[i].nodeType==1) {
				anyString += childS[i].tagName=="BR" ? '\n' : childS[i].innerText;
			} else if(childS[i].nodeType==3) {
				anyString += childS[i].nodeValue;
			}
		}
		return anyString;
	});
	HTMLElement.prototype.__defineSetter__( "innerText", function(sText){
		this.textContent=sText;
	});
	HTMLElement.prototype.__defineSetter__('outerHTML', function(sHTML) {
			var r = this.ownerDocument.createRange();
		r.setStartBefore(this);
		var df = r.createContextualFragment(sHTML);
		this.parentNode.replaceChild(df,this);
		return sHTML;
	});

	HTMLElement.prototype.__defineGetter__('outerHTML', function() {
		var attr;
		var attrs = this.attributes;
		var str = '<' + this.tagName.toLowerCase();
		for(var i = 0;i < attrs.length;i++){
			attr = attrs[i];
			if(attr.specified)
			str += ' ' + attr.name + '="' + attr.value + '"';
		}
		if(!this.canHaveChildren) {
			return str + '>';
		}
		return str + '>' + this.innerHTML + '</' + this.tagName.toLowerCase() + '>';
		});

	HTMLElement.prototype.__defineGetter__('canHaveChildren', function() {
		switch(this.tagName.toLowerCase()) {
			case 'area':case 'base':case 'basefont':case 'col':case 'frame':case 'hr':case 'img':case 'br':case 'input':case 'isindex':case 'link':case 'meta':case 'param':
			return false;
			}
		return true;
	});
}

if(typeof IN_ADMINCP == 'undefined') {
	if(creditnotice != '' && getcookie('creditnotice')) {
		_attachEvent(window, 'load', showCreditPrompt, document);
	}
	if(typeof showusercard != 'undefined' && showusercard == 1) {
		_attachEvent(window, 'load', cardInit, document);
	}
}

if(BROWSER.ie) {
	document.documentElement.addBehavior("#default#userdata");
}

function showWindowOverlay(url) {
    var $ = jQuery,
        $overlay = $('.window-overlay');
    if (!$overlay.length) {
        $overlay = $('<div class="window-overlay"></div>').windowOverlay();
        $('body').append($overlay);
    }

    $.ajax({
        type: 'get',
        url: url,
        success: function(data) {
            var $elem = $(data);
            $overlay.append($elem);
						$elem.trigger('open');
        }
    });
}

// 私人消息对话框的初始化函数。（用回调函数的形式，这是因为对话框里面的js只有在第一次打开对话框时才会运行）
function pm_win_init() {
    refresh =true;
    msgListObj = $('msglist');
    msgListObj.scrollTop = msgListObj.scrollHeight;
    refreshHandle = setInterval('refreshMsg();', 8000);
}

// tooltip引导图关闭
function closeGuideTip(name,_this){
	saveUserdata(name,today);
	_this.parentElement.style.display='none';
}

/**
 * 封装埋点方法
 * @param {Number} category
 * @param {String} action
 */
function setGaData (category, action) {
    try {

        if ('ga' in window) {
            var tracker = window.ga.getAll()[0];

            if (tracker) {
                var categoryName;

                switch (category) {
                    case 0:
                        categoryName = '顶部导航栏';
                        break;

	                case 1:
                        categoryName = '首页';
                        break;

	                case 2:
                        categoryName = '问答';
                        break;

                    case 3:
                        categoryName = '资料库';
                        break;

                    case 4:
                        categoryName = '论坛';
                        break;

                    case 5:
                        categoryName = '版块';
                        break;

                    case 6:
                        categoryName = '自助服务';
                        break;

                    case 7:
                        categoryName = '故障案例库';
                        break;

                    case 8:
                        categoryName = '登录';
                        break;

                    case 9:
                        categoryName = '注册';
                        break;

                    default: // do nothing
                }

                tracker.send('event', categoryName, action, window.location.href);
            }
        }
    } catch (e) {
        /* eslint-disable */
        // do nothing
        /* eslint-enable */
    }

}

function getQueryVariable(variable)
{
       var query = window.location.search.substring(1);
       var vars = query.split("&");
       for (var i=0;i<vars.length;i++) {
               var pair = vars[i].split("=");
               if(pair[0] == variable){return pair[1];}
       }
       return(false);
}
// 新增提示框
function showTipAlert(msg, closeTime) {
	if(jQuery('.show_tip_alert').length){
		jQuery('.show_tip_alert').remove()
	}
	var p = /<script[^\>]*?>([^\x00]*?)<\/script>/ig;
	msg = msg.replace(p, '');
  closeTime = closeTime || 3000;
	var bodyEle = jQuery('body')
	bodyEle.append('<div class="show_tip_alert"><img src="/webapp/common/page/image/show_tip_alert.png" />'+msg+'</div>')
	setTimeout(function(){
		jQuery('.show_tip_alert').remove()
	},closeTime)
}

// 新增成功消息
function showTipSuccess(msg, closeTime) {
	if(jQuery('.show_tip_success').length){
		jQuery('.show_tip_success').remove()
	}
	var p = /<script[^\>]*?>([^\x00]*?)<\/script>/ig;
	msg = msg.replace(p, '');
  closeTime = closeTime || 3000;
	var bodyEle = jQuery('body')
	bodyEle.append('<div class="show_tip_success"><img src="/webapp/common/page/image/show_tip_success.png" />'+msg+'</div>')
	setTimeout(function(){
		jQuery('.show_tip_success').remove()
	},closeTime)
}
